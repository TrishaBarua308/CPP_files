#include <bits/stdc++.h>
#define endl "\n"
using namespace std;
     
int main() 
{
    long long n,k;   cin>>n>>k;
    long long count=0;

    string s;    cin>>s;

    for(long long i=0; i<n; )
    {
        if(s[i]=='0')
        {
            count++;
            i+=k;  // skip those digits
        }
        else
        {
            i++;
        }
    }

    cout<<count<<endl;


    return 0;
}
