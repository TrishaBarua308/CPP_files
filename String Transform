#include <bits/stdc++.h>
using namespace std;
     
int main() 
{
    string s;  getline(cin,s);

    
    for(int i=0; i<s.length(); i++)
    {
        if((s[i]>='A' && s[i]<='Z') || (s[i]>='a' && s[i]<='z'))
        {
            if((i+1)%3==0)
            {
                s[i]=toupper(s[i]); 
            }
           
        }
    }

    cout<<s<<endl;

    return 0;
}
