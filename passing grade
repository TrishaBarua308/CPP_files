#include <iostream>
using namespace std;

int main() 
{
    int T;
    cin >> T;

    while(T--) 
    {
        int N;
        cin >> N;

        int A[N];
        for(int i = 0; i < N; i++) {
            cin >> A[i];
        }

        int mark = A[0];
        int count = 0;

        for(int i = 0; i < N; i++) {
            if(A[i] >= mark) {
                count++;
            }
        }

        cout << count << endl;
    }

    return 0;
}
