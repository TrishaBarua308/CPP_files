#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;   cin>>t;
    while(t--)
    {
        int n;  cin>>n;
        
        int a[n], b[n];
        
        int ans=-1;
        int maxb =-1;
        
        for(int i=0; i<n; i++)
        {
            cin>>a[i]>>b[i];
            
            if(a[i]<=10)
            {
                if(maxb<b[i])
                {
                    maxb = b[i];
                    ans = i+1;
                }
            }
        }
      cout<<ans<<endl;
    }
    
    
    return 0;
}
