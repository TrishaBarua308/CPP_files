#include <bits/stdc++.h>
using namespace std;
#define ll long long
const ll MOD = 1e9 + 7;

int main() {
    ll n;
    cin >> n;

    if(n == 0 || n==1) {
        cout << n << endl;
        return 0;
    }

    else
    {
        ll a = 0, b = 1; // F0 = 0, F1 = 1
        for(ll i = 2; i <= n; i++) {
        ll c = (a + b) % MOD;
        a = b;
        b = c;
    }

    cout << b << endl; // F_n mod 10^9+7
    }


    return 0;
}
