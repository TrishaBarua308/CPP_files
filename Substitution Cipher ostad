#include <bits/stdc++.h>
using namespace std;
     
int main()
{
  
    string alpha = "abcdefghijklmnopqrstuvwxyz";
    string s;  int n,flag=0;
    
    cin>>s>>n;
    string ans;
    ans.resize(s.length());

    if(s[0]>='A' && s[0]<='Z') flag=1;

    for(int i=0; i<s.length(); i++)
    {
        for(int j=0; j<alpha.length(); j++)
        {
            char c = tolower(s[i]);
            
            if(c==alpha[j])
            {
                ans[i] = alpha[(j+n)%26] ;

                if(isupper(s[i])) ans[i] = toupper(ans[i]);
                else ans[i] = tolower(ans[i]);
            }
        }
    }

    cout<<ans<<endl;



    return 0;
}
