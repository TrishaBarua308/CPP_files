#include <bits/stdc++.h>
using namespace std;
     
int main() {
    /**
    * Write your C++ code from here
    */
    string s;  cin>>s;
    int count=0;
    for(int i=0; i<s.length()-2; i++)
    {
        if( (s[i]=='1' && s[i+1]=='0' && s[i+2]=='1') || (s[i]=='0' && s[i+1]=='1' && s[i+2]=='0') ) 
        {
            count++;
            i++;
        }
        
    }

    cout<<count<<endl;

    return 0;
}
